{{!--Initiate the user information section--}}
<div class="hero-body">
  <div class="column is-4 is-offset-5">
    <div class="card">
     <div class="card-content">
      <div class="media">
      <div class="media-left">
          {{!--user avatar--}}
        <figure class="image is-128x128">
          <img class="is-rounded" src="/avatar/{{id}}" alt="Placeholder image">
          </figure>
      </div>
      {{!--user information--}}
      <div class="media-content">
        <p class="title is-4">User: {{>partial-user user}}</p>
        <div>
          <form id="rating-form">
              <label class="label">Rating</label>
                   <input type="number" placeholder="rating out of 5"  id="ratings-select"
                   class="input rating-input" name='rating-input' required/><br><br>
                  <button type="submit" value="Submit"  class="rating-btn" data-user="{{user.id}}" >Submit</a></button>
          </form>
        </div>
        <p class="subtitle is-6"><a href="mailto:{{user.email}}">{{user.email}}</a></p>
      </div>
      </div>
     <div class="content">
        {{!--user ratings/likes--}}
       <div>Rating: {{ userAverage}}</div>
        {{!--If loggedIn user include the email and login history--}}
    {{#if sameUser}}
    <div>Email: {{user.email}}</div>
    <div>Last Login: {{user.last_login}}</div>
    {{/if}}
    </div>
  </div>
  </div>
</div>
</div>

<script src="/javascript/ratings.js"></script>

 